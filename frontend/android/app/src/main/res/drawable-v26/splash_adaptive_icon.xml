<?xml version="1.0" encoding="utf-8"?>
<!-- Adaptive icon for Android 8.0+ (API 26+) splash screen.
     The background is white so the circular mask is invisible against the white splash background.
     The foreground uses a centered bitmap to ensure the icon is properly centered. -->
<adaptive-icon xmlns:android="http://schemas.android.com/apk/res/android">
    <background android:drawable="@color/splashBackground"/>
    <foreground android:drawable="@drawable/splash_centered"/>
</adaptive-icon>
